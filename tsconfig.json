{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "node",
    "target": "es5",
    "module": "esnext",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "noImplicitAny": false,
    "declarationDir": "type/types",
    "outDir": "type/lib",
    "typeRoots": ["node_modules/@types", "src/declaration.d.ts"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}